{
  "expo": {
    "name": "Tickin",
    "slug": "alvinluTimeApp",
    "owner": "muhammadabdulmannan21",
    "version": "1.0.8",
    "orientation": "portrait",
    "icon": "./assets/images/splash-icon.png",
    "scheme": ["alvinlutimeapp"],
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "buildNumber": "1",
      "bundleIdentifier": "com.muhammadabdulmannan21.alvinluTimeApp",
      "icon": "./assets/images/splash-icon.png",
      "usesNonExemptEncryption": false,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "This app requires camera access to take photos and scan barcodes.",
        "NSMicrophoneUsageDescription": "This app requires microphone access to record audio when using the camera.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select and share photos.",
        "NSPhotoLibraryAddUsageDescription": "This app needs permission to save photos to your library."
      }
    },
    "android": {
      "versionCode": 2,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.muhammadabdulmannan21.alvinluTimeApp",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "cover",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": false,
          "isAccessMediaLocationEnabled": "true"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      "expo-localization",
      "expo-secure-store",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Tickin to access your photos.",
          "savePhotosPermission": "Allow Tickin to save photos.",
          "isAccessMediaLocationEnabled": true,
          "granularPermissions": ["audio", "photo"]
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "minSdkVersion": 24,
            "buildToolsVersion": "35.0.0",
            "gradleVersion": "8.13",
            "agpVersion": "8.8.2",
            "kotlinVersion": "2.0.21"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b8cb1147-7365-4ff6-a344-b83e7585f8a9"
      }
    }
  }
}
